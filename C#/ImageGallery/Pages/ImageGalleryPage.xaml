<Page x:Class="ImageGallery.Pages.ImageGalleryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
              xmlns:vm="clr-namespace:ImageGallery.ViewModels"
      Title="ImageGalleryPage">
    <Page.DataContext>
        <vm:ImageGalleryViewModel />
    </Page.DataContext>
    <StackPanel>
        <TextBox Text="{Binding FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <TextBlock Text="{Binding FirstName}" />
        <Button Content="Set Active" Command="{Binding MyCommand2}" />
        <Button Content="Blabubl" IsEnabled="{Binding Active}" />
    </StackPanel>
</Page>
